# VSS OMNI TELECOM - Environment Configuration
# Копируйте этот файл как .env и измените все пароли и секреты!

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
DB_PASSWORD=CHANGE_ME_vss_postgres_secure_password_here
POSTGRES_URL=postgresql://vss:CHANGE_ME_vss_postgres_secure_password_here@postgres:5432/vss_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=vss_db
POSTGRES_USER=vss

# ==============================================================================
# RABBITMQ CONFIGURATION
# ==============================================================================
RABBITMQ_PASSWORD=CHANGE_ME_vss_rabbitmq_secure_password_here
RABBITMQ_URL=amqp://vss-admin:CHANGE_ME_vss_rabbitmq_secure_password_here@rabbitmq:5672/vss
RABBITMQ_DEFAULT_USER=vss-admin
RABBITMQ_DEFAULT_PASS=CHANGE_ME_vss_rabbitmq_secure_password_here
RABBITMQ_DEFAULT_VHOST=/vss
RABBITMQ_ENABLED=true
RABBITMQ_AUTO_RECONNECT=true
RABBITMQ_MAX_RECONNECT_ATTEMPTS=5
RABBITMQ_RECONNECT_DELAY=30000

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
REDIS_PASSWORD=CHANGE_ME_vss_redis_secure_password_here
REDIS_URL=redis://:CHANGE_ME_vss_redis_secure_password_here@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# ==============================================================================
# JWT AUTHENTICATION
# ==============================================================================
# ВАЖНО: Сгенерируйте безопасный секрет командой:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_RANDOM_SECRET_HERE
JWT_EXPIRES_IN=3600

# ==============================================================================
# SERVICE PORTS (for local development)
# ==============================================================================
PORT_WORKSPACE=3000
PORT_POINT=8081
PORT_DCI=8082
PORT_OTTB=8083

# ==============================================================================
# GRAFANA CONFIGURATION
# ==============================================================================
GRAFANA_PASSWORD=CHANGE_ME_vss_grafana_secure_password_here
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME_vss_grafana_secure_password_here

# ==============================================================================
# ASTERISK CONFIGURATION
# ==============================================================================
AMI_PASSWORD=CHANGE_ME_vss_ami_secure_password_here

# SIP Provider Configuration (optional)
PROVIDER_HOST=
PROVIDER_PORT=5060
PROVIDER_DOMAIN=
PROVIDER_USER=
PROVIDER_PASSWORD=

# ==============================================================================
# KAMAILIO CONFIGURATION
# ==============================================================================
KAMAILIO_DEBUG=3
KAMAILIO_CHILDREN=4

# ==============================================================================
# GUACAMOLE CONFIGURATION
# ==============================================================================
GUACAMOLE_URL=http://localhost:8080

# ==============================================================================
# NODE ENVIRONMENT
# ==============================================================================
NODE_ENV=production
DOCKER_ENV=true

